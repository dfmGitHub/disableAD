{
  // 清单文件的版本，这个必须写，而且必须是2?
  "manifest_version": 2,
  // 插件的名称
  "name": "disableAD",
  // 插件的版本
  "version": "1.0.1",
  // 需要直接注入页面的JS
  "content_scripts":
  [
    {
      //"matches": ["http://*/*", "https://*/*"],
      // "<all_urls>" 表示匹配所有地址
      "matches": ["http://c.biancheng.net/*"],
      // 多个JS按顺序注入
      "js": ["js/cBiancheng.js"],
      // 代码注入的时间，可选值： "document_start", "document_end", or "document_idle"，最后一个表示页面空闲时，默认document_idle
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.v2ex.com/*"],
      "js": ["js/v2ex.js"],
      "run_at": "document_idle"
    }
  ]
}
